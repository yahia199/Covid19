@model IList<Covid_19_LTUC_Task.Models.Countries>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*@if (Model.Count == 0)
    {
        <p><i>There is no items...</i></p>
    }*@
<div class="container py-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="card ">
                <div class="card-body">
                    <h5 class="card-title" style="color:red"> Country : @item.Country </h5>
                    <p class="card-text">Total Confirmed Cases : @item.TotalConfirmed </p>
                    <p class="card-text">Total Deaths Cases : @item.TotalDeaths</p>
                    <p class="card-text">Total Recovered Cases : @item.TotalRecovered</p>
                    <p class="card-text"> Date : @item.Date</p>
                    @*<button type="button" class="AddRecord" asp-controller="Countries" asp-action="Add" asp-route-id="@item.ID"> Add To My Records</button>*@
                    @*<a data-id="@item.ID" class="btn btn-outline-warning btn-sm AddRecord">Edit</a>*@
                    <a asp-controller="Countries" asp-action="Add" asp-route-id="@item.ID" class="btn btn-outline-warning btn-sm">Add</a>
                </div>
            </div>

        }
    </div>
</div>
<script src="~/js/CovidApi/AllCountries.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
